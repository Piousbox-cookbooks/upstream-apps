description "<%= @app_name %> Rack App"

start on runlevel [2345]
respawn
respawn limit 5 30

pre-start script
  test -e <%= @app_root %> || { stop; exit 0; }
  test -e <%= @unicorn_config %> || { stop; exit 0; }
end script

exec su - deploy -c 'cd <%= @app_root %>; <%= @unicorn_binary %> -c <%= @unicorn_config %> -E <%= @rack_env %> >> <%= @log_file %> 2>&1'
